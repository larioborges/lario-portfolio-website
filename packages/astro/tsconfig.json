{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "./**/*.ts",
    "./**/*.svelte",
    "./**/*.astro",
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "*.js",
    ".netlify/**/*",
    "packages/**/*",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/layouts/*": [
        "layouts/*",
      ],
      "@/pages/*": [
        "pages/*",
      ],
      "@/styles/*": [
        "styles/*",
      ],
      "@/data/*": [
        "src/data/*",
      ],
      "@/lib/*": [
        "lib/*",
      ],
      "@/public/*": [
        "public/*",
      ],
    },
    "sourceMap": true,
    "resolveJsonModule": true,
  },
}
