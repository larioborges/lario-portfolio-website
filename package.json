{
	"name": "lario-portfolio-website",
	"version": "0.0.1",
	"type": "module",
	"license": "UNLICENSED",
	"packageManager": "bun@1.2.15",
	"scripts": {
		"astro": "bunx --bun astro",
		"build:production": "ROBOTS=on bunx --bun astro build",
		"build": "bunx --bun astro build",
		"build:local": "NETLIFY=disabled bunx --bun astro build",
		"dev": "bunx --bun astro dev",
		"lint": "bunx --bun @biomejs/biome ci ./src",
		"lint:fix": "bunx --bun @biomejs/biome check --write ./src",
		"lint:fixall": "bun run format:astro && bun run lint:fix",
		"format:astro": "bunx --bun prettier --write **/*.astro",
		"netlify:build": "bunx netlify build",
		"preview:local": "NETLIFY=disabled bunx --bun astro preview",
		"postinstall": "husky",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable"
	},
	"dependencies": {
		"@astrojs/partytown": "^2.1.4",
		"@nanostores/persistent": "^1.0.0",
		"astro": "5.10.1",
		"astro-capo": "^0.0.1",
		"motion": "^12.19.2",
		"nanostores": "^1.0.1"
	},
	"devDependencies": {
		"@astrojs/language-server": "^2.15.4",
		"@astrojs/netlify": "6.4.0",
		"@astrojs/sitemap": "3.4.1",
		"@biomejs/biome": "^2.1.3",
		"@contentful/rich-text-html-renderer": "^17.0.0",
		"@fontsource/inter": "^5.2.6",
		"@playform/build": "^0.2.4",
		"@tailwindcss/vite": "^4.1.10",
		"@types/bun": "^1.2.15",
		"@types/gtag.js": "^0.0.20",
		"astro-compress": "^2.3.8",
		"astro-compressor": "^1.0.0",
		"astro-purgecss": "^5.2.3",
		"astro-robots-txt": "^1.0.0",
		"autoprefixer": "^10.4.21",
		"contentful": "^11.5.24",
		"cssnano": "^7.0.7",
		"globals": "^16.1.0",
		"husky": ">=6",
		"isomorphic-dompurify": "^2.25.0",
		"lint-staged": ">=10",
		"netlify-cli": "^21.5.0",
		"pinst": ">=2",
		"postcss-import": "^16.1.0",
		"postcss-nested": "^7.0.2",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3",
		"tw-animate-css": "^1.2.4",
		"vite": "^6.3.2"
	}
}
