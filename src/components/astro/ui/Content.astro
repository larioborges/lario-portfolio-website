---
import DOMPurify from 'isomorphic-dompurify';

const { content, heading, HeadingIcon } = Astro.props;
---

{heading &&
	<div class="heading-wrapper">
	  {HeadingIcon && 
			<div class="icon-wrapper">
				<HeadingIcon class="icon" />
			</div>
		}
		<h4 class="heading">{heading}</h4>
	</div>
}
{content &&
	<div class="content-wrapper">
		<Fragment set:html={DOMPurify.sanitize(content)} />
	</div>
}

<style>
	@reference "@/styles/global.css";
	.content-wrapper {
		@apply ml-4 list-none space-y-2 text-sm;
	}
  .heading-wrapper {
		@apply mb-3 flex items-center;
	}
	.icon-wrapper {
		@apply mr-2 flex h-6 w-6 items-center justify-center rounded-full bg-yellow-500/10;
	}
	.heading {
		@apply text-sm font-medium;
	}
</style>
