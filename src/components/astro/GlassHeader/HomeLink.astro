<a
	class="home-link"
	href="/"
>
  <img
    alt="South Africa"
    src={southAfrica.src}
    class="light-icon"
  />
  <img
    alt="Luigi Cap"
    src={luigiCap.src}
    class="dark-icon"
  />
  {name}
