---
import { Image } from 'astro:assets';
import luigiCap from '@/images/luigi-cap.png';
import southAfrica from '@/images/south-africa.png';

const { name } = Astro.props;
---

<!-- whileTap={{
  TODO Lario
	scale: 0.95,
}} -->
<a
	class="home-link"
	href="/"
>
  <Image
    alt="South Africa"
    src={southAfrica}
    quality={72}
    width={35}
    height={35}
    format='webp'
    class="light-icon"
  />
  <Image
    alt="Luigi Cap"
    src={luigiCap}
    quality={72}
    width={35}
    height={35}
    format='webp'
    class="dark-icon"
  />
  {name}
</a>

<style>
  @reference "@/styles/global.css";
  :global(.light-icon, .dark-icon) {
    @apply mr-2.5 inline-block align-middle;
  }
  :global(.light-icon) {
    @apply dark:hidden;
  }
  :global(.dark-icon) {
    @apply hidden dark:inline-block;
  }
  .home-link {
    @apply flex items-center text-lg font-medium;
  }
</style>
