<style>
@reference "@/styles/global.css";
img {
  @apply mr-2.5 inline-block align-middle;
}
.light-icon {
  @apply dark:hidden;
  width: 50px;
  height: 36px;
}
.dark-icon {
  @apply hidden dark:inline-block;
  width: 35px;
  height: 35px;
}
.home-link {
  @apply flex items-center text-lg font-medium;
}
</style>
