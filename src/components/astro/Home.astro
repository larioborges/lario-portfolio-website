---
import HeroSection from '@/components/HeroSection.svelte';
import SkillCategorySection from '@/components/SkillCategorySection.svelte';

const {
	personalInfo,
	featuredSkills,
} = Astro.props;
---

<style lang="postcss">
	@reference "@/styles/global.css";
  #experience {
	  @apply from-muted/20 to-background bg-gradient-to-b py-12;
	}

	.home-page-wrapper {
		@apply container mx-auto max-w-4xl px-6 md:px-4;
	}
</style>

<section id="experience">
	<div class="home-page-wrapper">
		<HeroSection
			{...personalInfo}
			client:only="svelte"
		/>
		<SkillCategorySection {...featuredSkills} client:only='svelte' />
	</div>
</section>
