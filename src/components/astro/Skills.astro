---
import MotionWrapper from '@/motion/MotionWrapper.svelte';
import MotionDiv from '@/motion/MotionDiv.svelte';
import Heading from '@/ui/Heading.svelte';
import SkillCategorySection from '@/components/SkillCategorySection.svelte';
import type {
	SkillCategoryResponse,
} from '@/contentful/types';

const containerVariants = {
	hidden: {
		opacity: 0,
	},
	visible: {
		opacity: 1,
		transition: {
			staggerChildren: 0.1,
		},
	},
};

const {
	skillCategories,
} = Astro.props;
---

<section
	id="skills"
	class="from-background to-muted/20 bg-gradient-to-b py-12"
>
	<div class="container mx-auto max-w-4xl px-6 md:px-4">
		<MotionWrapper client:only="svelte" >
			<Heading icon="ðŸ› ï¸" text="Skills" client:only='svelte' />
		</MotionWrapper>

		<MotionDiv
			class="space-y-6"
			variants={containerVariants}
			initial="hidden"
			whileInView="visible"
			viewport={{
				once: true,
				margin: '-50px',
			}}
			client:only="svelte"
		>
			{skillCategories.map(
				(
					{
						name, icon, skills,
					}:SkillCategoryResponse,
				) => <SkillCategorySection {name} {icon} {skills} client:only="svelte"/>,
			)}
		</MotionDiv>
	</div>
</section>
