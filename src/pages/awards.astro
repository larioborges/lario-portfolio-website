---
import Layout from '@/layouts/Layout.astro';
import AwardsSection from '@/astro/AwardsSection.astro';
import {
	getAwards,
	getSeoFieldsById,
	getPersonalInfo,
} from '@/contentful/queries';

const [
	{
		name,
	},
	awards,
	seoField,
] = (await Promise.all(
	[
		getPersonalInfo(),
		getAwards(),
		getSeoFieldsById(
			'4a3PYeoBpPFuf3MyhVTt8G',
		),
	],
));
---

<Layout {...seoField} siteName={seoField.title} image={(seoField.image as { fields: any }).fields} {name}>
	<AwardsSection
		{awards}
	/>
</Layout>
