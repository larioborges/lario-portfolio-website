---
import AwardsComponent from '@/components/Awards/Awards.svelte';
import {
	getAwards,
	getPersonalInfo,
	getSeoFieldsById,
} from '@/contentful/queries';
import Layout from '@/layouts/Layout.astro';

const [{ name }, awards, seoField] = await Promise.all([
	getPersonalInfo(),
	getAwards(),
	getSeoFieldsById('4a3PYeoBpPFuf3MyhVTt8G'),
]);
---

<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	{name}
>
	<AwardsComponent
		{awards}
		client:only="svelte"
	/>
</Layout>
