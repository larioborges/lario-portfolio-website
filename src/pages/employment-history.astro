---
import Layout from '@/layouts/Layout.astro';
import EmploymentHistoryComponent from '@/components/EmploymentHistory.svelte';
import {
	getPastEmployers,
	getSeoFieldsById,
	getPersonalInfo,
} from '@/contentful/queries';

const [
	{
		name,
	},
	pastEmployers,
	seoField,
] = (await Promise.all(
	[
		getPersonalInfo(),
		getPastEmployers(),
		getSeoFieldsById(
			'4a3PYeoBpPFuf3MyhVTt8G',
		),
	],
));
---

<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	{name}
>
	<EmploymentHistoryComponent
		{pastEmployers}
		client:only="svelte"
	/>
</Layout>
