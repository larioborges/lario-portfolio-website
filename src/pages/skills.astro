---
import SkillsComponent from '@/astro/Skills.astro';
import {
	getPersonalInfo,
	getSeoFieldsById,
	getSkillCategories,
} from '@/contentful/queries';
import Layout from '@/layouts/Layout.astro';

const [{ name }, skillCategories, seoField] = await Promise.all([
	getPersonalInfo(),
	getSkillCategories(),
	getSeoFieldsById('4a3PYeoBpPFuf3MyhVTt8G'),
]);
---

<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	{name}
	canonicalPath="/skills"
>
	<SkillsComponent {skillCategories} />
</Layout>
