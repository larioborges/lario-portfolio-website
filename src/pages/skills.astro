---
import Layout from '@/layouts/Layout.astro';
import SkillsComponent from '@/components/Skills.svelte';
import {
	getPersonalInfo,
	getSkillCategories,
	getSeoFieldsById,
} from '@/contentful/queries';

const [
	{
		name,
	},
	skillCategories,
	seoField,
] = (await Promise.all(
	[
		getPersonalInfo(),
		getSkillCategories(),
		getSeoFieldsById(
			'4a3PYeoBpPFuf3MyhVTt8G',
		),
	],
));
---

<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	{name}
>
	<SkillsComponent {skillCategories} client:only="svelte"/>
</Layout>
