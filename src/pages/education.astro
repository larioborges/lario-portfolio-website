---
import Layout from '@/layouts/Layout.astro';
import EducationSection from '@/astro/EducationSection.astro';
import {
	getCertifications,
	getSeoFieldsById,
	getPersonalInfo,
} from '@/contentful/queries';

const [
	{
		name,
	},
	certifications,
	seoField,
] = (await Promise.all(
	[
		getPersonalInfo(),
		getCertifications(),
		getSeoFieldsById(
			'4a3PYeoBpPFuf3MyhVTt8G',
		),
	],
));
---

<Layout {...seoField} siteName={seoField.title} image={(seoField.image as { fields: any }).fields} {name}>
	<EducationSection {certifications} />
</Layout>
