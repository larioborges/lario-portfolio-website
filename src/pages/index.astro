---
import Home from '@/components/Home.svelte';
import {
	getFeaturedSkills,
	getPersonalInfo,
	getSeoFieldsById,
} from '@/contentful/queries';
import Layout from '@/layouts/Layout.astro';

const [personalInfo, featuredSkills, seoField] = await Promise.all([
	getPersonalInfo(),
	getFeaturedSkills(),
	getSeoFieldsById('4a3PYeoBpPFuf3MyhVTt8G'),
]);
---
<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	name={personalInfo.name}
>
	<Home {personalInfo} {featuredSkills} client:only="svelte" />
</Layout>
