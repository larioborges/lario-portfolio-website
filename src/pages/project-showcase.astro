---
import Layout from '@/layouts/Layout.astro';
import ProjectShowcaseComponent from '@/components/ProjectShowcase/ProjectShowcase.svelte';
import {
	getSeoFieldsById,
	getPersonalInfo,
	getShowcaseProjects,
} from '@/contentful/queries';

const [
	{
		name,
	},
	showcaseProjects,
	seoField,
] = (await Promise.all(
	[
		getPersonalInfo(),
		getShowcaseProjects(),
		getSeoFieldsById(
			'4a3PYeoBpPFuf3MyhVTt8G',
		),
	],
));
---

<Layout
	{...seoField}
	siteName={seoField.title}
	image={(seoField.image as { fields: any }).fields}
	{name}
>
	<ProjectShowcaseComponent {showcaseProjects} client:only="svelte" />
</Layout>
