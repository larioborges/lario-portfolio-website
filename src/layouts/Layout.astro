---
import '@/styles/global.css';
import {
	AstroFont, 
} from 'astro-font';
import {
	GoogleAnalytics, 
} from 'astro-google-analytics';
import {
	AstroSeo, 
} from '@astrolib/seo';
import favicon from '@/assets/images/favicon.webp';
import {
	Head, 
} from 'astro-capo';

interface Props {
	title?: string;
	description?: string;
	canonicalUrl?: string;
	siteName?: string;
}

const {
	title = 'Lario Borges - Full Stack Web Engineer',
	description = 'Bright, experienced and diligent Web Engineer and web front end specialist. Get to know some the nut in this shell (AKA Lario Borges).',
	canonicalUrl = 'https://lariocpt.biz',
	siteName = 'Lario Borges - Full Stack Web Engineer',
} = Astro.props;
---

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}

	:root {
		--transition-standard: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	body {
		transition:
			background-color var(--transition-standard),
			color var(--transition-standard);
	}
</style>

<html lang='en'>
	<Head>
		<GoogleAnalytics id='G-YW069N7W3X' />
		<script src='@/scripts/BrowserInit.ts'></script>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href={favicon.src}
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<AstroSeo
			{title}
			{description}
			canonical={canonicalUrl}
			openGraph={{
				url: canonicalUrl,
				title,
				description,
				// TODO Lario
				// images: [
				//   {
				//     url: 'https://www.example.ie/og-image-01.jpg',
				//     width: 800,
				//     height: 600,
				//     alt: 'Og Image Alt',
				//     type: 'image/jpeg',
				//   },
				//   {
				//     url: 'https://www.example.ie/og-image-02.jpg',
				//     width: 900,
				//     height: 800,
				//     alt: 'Og Image Alt Second',
				//     type: 'image/jpeg',
				//   },
				//   { url: 'https://www.example.ie/og-image-03.jpg' },
				//   { url: 'https://www.example.ie/og-image-04.jpg' },
				// ],
				site_name: siteName,
			}}
		/>
		<AstroFont
			config={[
				{
					src: [],
					name: 'Inter',
					googleFontsURL:
						'https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif',
				},
			]}
		/>
	</Head>
	<body
		class='min-h-screen bg-background font-sans antialiased dark:selection:bg-yellow-200/20 dark:selection:text-yellow-200'
	>
		<div
			class='fixed inset-0 -z-10 h-full w-full bg-background bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]'
		>
		</div>
		<slot />
	</body>
</html>
