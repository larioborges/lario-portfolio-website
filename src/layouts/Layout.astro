---
import '@/styles/global.css';
import {
	AstroFont,
} from 'astro-font';
import {
	GoogleAnalytics,
} from 'astro-google-analytics';
import {
	AstroSeo,
	type OpenGraph,
} from '@astrolib/seo';
import favicon from '@/assets/images/favicon.webp';
import {
	Head,
} from 'astro-capo';
import type {
	AssetFields,
} from 'contentful';

interface Props {
	title: string;
	description: string;
	canonicalUrl: string;
	siteName: string;
	images?: AssetFields[] | undefined,
}

const {
	title,
	description,
	canonicalUrl,
	siteName,
	images,
} = Astro.props;

const openGraph = images != undefined ? {
	url: canonicalUrl,
	title,
	description,
	site_name: siteName,
	images: images.map(image => ({
		url: image.file?.url,
		width: image.file?.details.image?.width,
		height: image.file?.details.image?.height,
		alt: image.description,
		type: image.file?.contentType,
	})),
} :
	{
		url: canonicalUrl,
		title,
		description,
		site_name: siteName,
	};
---

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}

	:root {
		--transition-standard: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	body {
		transition:
			background-color var(--transition-standard),
			color var(--transition-standard);
	}
</style>

