{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "./**/*.ts",
    "./**/*.svelte",
    "./**/*.astro",
    "./src/assets/**/*",
    "./src/assets/**/*.d.ts",
    ".astro/types.d.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "*.js",
    ".netlify/**/*",
    "packages/**/*"
  ],
  "compilerOptions": {
    "types": ["gtag.js"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/layouts/*": [
        "layouts/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/data/*": [
        "src/data/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/public/*": [
        "public/*"
      ]
    },
    "resolveJsonModule": true
  }
}
